{
  "$schema": "https://raw.githubusercontent.com/aws/amazon-q-developer-cli/refs/heads/main/schemas/agent-v1.json",
  "name": "product-manager",
  "description": "sub-agent:Expert in backlog grooming, user story creation, acceptance criteria, estimation, and sprint planning. Use for: refining requirements, defining acceptance criteria, prioritizing work, sprint planning.",
  "prompt": null,
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp"]
    }
  },
  "tools": [
    "*"
  ],
  "toolAliases": {},
  "allowedTools": [
    "fs_read",
    "fs_write",
    "web_search"
  ],
  "resources": [
    "file://{{KIRO_DIR}}/sub-agents/prompts/product-manager.md"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "{{HOOK_NOTIFY}} --agent-name \"product-manager\"",
        "timeout_ms": 10000,
        "max_output_size": 1024,
        "cache_ttl_seconds": 0
      }
    ]
  },
  "toolsSettings": {},
  "useLegacyMcpJson": true
}
