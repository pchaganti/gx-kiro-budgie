{
  "$schema": "https://raw.githubusercontent.com/aws/amazon-q-developer-cli/refs/heads/main/schemas/agent-v1.json",
  "name": "codebase-locator",
  "description": "sub-agent:Find WHERE files and components exist. Use for: locating files by name/pattern, mapping directory structure, finding related files (tests, configs, docs). Does NOT analyze code logic.",
  "prompt": null,
  "mcpServers": {},
  "tools": [
    "*"
  ],
  "toolAliases": {},
  "allowedTools": [
    "fs_read",
    "fs_write",
    "execute_bash"
  ],
  "resources": [
    "file://{{KIRO_DIR}}/sub-agents/prompts/codebase-locator.md"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "{{HOOK_NOTIFY}} --agent-name \"codebase-locator\"",
        "timeout_ms": 10000,
        "max_output_size": 1024,
        "cache_ttl_seconds": 0
      }
    ]
  },
  "toolsSettings": {},
  "useLegacyMcpJson": true
}
