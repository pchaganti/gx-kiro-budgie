{
  "$schema": "https://raw.githubusercontent.com/aws/amazon-q-developer-cli/refs/heads/main/schemas/agent-v1.json",
  "name": "orchestrator",
  "description": "Main orchestrator agent that delegates tasks to specialized sub-agents",
  "prompt": null,
  "mcpServers": {
    "kiro-subagents": {
      "command": "{{BUDGIE_BINARY}}",
      "args": ["--agent-timeout", "15m", "--sandbox"],
      "type": "stdio"
    }
  },
  "tools": [
    "*"
  ],
  "toolAliases": {},
  "allowedTools": [
    "@kiro-subagents",
    "fs_read"
  ],
  "resources": [
    "file://{{KIRO_DIR}}/sub-agents/prompts/orchestrator.md"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "{{HOOK_NOTIFY}} --agent-name \"orchestrator\"",
        "timeout_ms": 10000,
        "max_output_size": 1024,
        "cache_ttl_seconds": 0
      }
    ],
    "stop": [
      {
        "command": "{{HOOK_NOTIFY}} --agent-name \"orchestrator\"",
        "timeout_ms": 10000,
        "max_output_size": 1024,
        "cache_ttl_seconds": 0
      }
    ]
  },
  "toolsSettings": {},
  "useLegacyMcpJson": true
}
